{
  "name": "rocket-engine-truth-ledger",
  "version": "0.1.0",
  "description": "Centralized fact-checking truth ledger for aerospace data with evidence-based scoring",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:ui": "cd ui && npm run build",
    "build:all": "npm run build && npm run build:ui",
    "dev": "tsx watch src/index.ts serve",
    "dev:ui": "cd ui && npm run dev",
    "start": "node dist/index.js serve",
    "serve": "tsx src/index.ts serve",
    "status": "tsx src/index.ts status",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:create": "tsx src/db/create-migration.ts",
    "seed": "tsx src/db/seed.ts",
    "job": "tsx src/index.ts job",
    "job:pipeline": "tsx src/index.ts job pipeline",
    "job:extract": "tsx src/index.ts job extract",
    "job:derive": "tsx src/index.ts job derive",
    "job:score": "tsx src/index.ts job score",
    "job:conflicts": "tsx src/index.ts job conflicts",
    "job:integrity": "tsx src/index.ts job integrity",
    "job:health": "tsx src/index.ts job health",
    "ingest:web": "tsx src/scripts/ingest-web-sources.ts",
    "ingest:feeds": "tsx src/scripts/ingest-feeds.ts",
    "ingest:feeds:schedule": "tsx src/scripts/ingest-feeds.ts --schedule",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
